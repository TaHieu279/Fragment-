<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    android:orientation="vertical">

    <TextView
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:textColor="#0022FF"
        android:textSize="28sp"
        android:text="Thông tin Sinh Viên"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/txtHoTenInfo"
        android:textColor="#FF0000"
        android:textSize="28sp"
        android:text="Họ tên"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/txtNamSinhInfo"
        android:textColor="#000000"
        android:textSize="22sp"
        android:text="Năm sinh: 2001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/txtDiaChiInfo"
        android:textColor="#000000"
        android:textSize="22sp"
        android:text="Địa chỉ: Hà nội"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/txtEmailInfo"
        android:textColor="#000000"
        android:textSize="22sp"
        android:text="Email: default@gmail.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>